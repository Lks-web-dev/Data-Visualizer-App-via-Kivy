#: import utils kivy.utils
Interface:

<Interface>:
    canvas.before:
        Rectangle:
            pos:self.pos
            size:self.size
    ScreenManager:
        id: sm
        Screen:
            name: "upload_window"
            Label:
                text: "Test label"
            Image_btn:
                id: upload_btn
                source: "Drag.png"
                size_hint: None, None
                size: dp(400), dp(400)
                center: self.parent.center
                on_press: root.upload_menu()
            Image_btn:
                source: "Forward.png"
                size_hint: None, None
                # In Pixel
                size: 48, 48
                pos_hint: {"right": 1}
                on_press: root.switching()
        Screen:
            name: "visualizer_window"
            DebugBoxLayout:
                orientation: "vertical"
                DebugBoxLayout:
                    size_hint: 1, 0.1
                    Label:
                        markup: True
                        text: "[color=#3f51b5]Data Visualizer[/color]"
                        font_size: "32sp"
                DebugBoxLayout:
                    size_hint: 1, .90
                    DebugBoxLayout:
                        orientation: "vertical"
                        size_hint: 0.25, 1
                        DebugBoxLayout:
                            orientation: "vertical"
                            size_hint: 1, .5
                            Label:
                                markup: True
                                text: "[color=#3f51b5]Files[/color]"
                                size_hint: 1, 0.15
                                font_size: "25sp"
                            DebugBoxLayout:
                                size_hint: 1, .85
                                ScrollView:
                                    DebugGridLayout:
                                        id: file_placeholder
                                        size_hint_y: None
                                        height: self.minimum_height
                                        cols: 1
                        DebugBoxLayout:
                            orientation: "vertical"
                            size_hint: 1, .5
                            Label:
                                markup: True
                                text: "[color=#3f51b5]Properties[/color]"
                                size_hint: 1, 0.15
                                font_size: "25sp"
                            DebugBoxLayout:
                                size_hint: 1, .85
                                ScrollView:
                                    GridLayout:
                                        id: property_placeholder
                                        spacing: 22, 22
                                        size_hint_y: None
                                        height: self.minimum_height
                                        cols: 1
                    DebugBoxLayout:
                        orientation: "vertical"
                        size_hint: 0.75, 1
                        DebugBoxLayout:
                            id: graph_placeholder
                        DebugBoxLayout:
                            size_hint_y: None
                            height: 50
                            Button:
                                size_hint: None, None
                                size: 100, 50
                                background_normal: "update.png"
                                background_down: "update_down.png"
                                on_press: root.update()
                            Widget:

                            Button:
                                size_hint: None, None
                                size: 50, 50
                                background_normal: "save_btn.png"
                                background_down: "save_btn_down.png"



